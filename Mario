#include <stdio.h>
#include <stdlib.h>

void yap(int n);

int main (void)
{
    int boyut;
    do
    {
    printf("boyut: ");
    scanf("%d",&boyut);
    }
    while (boyut<1 || boyut>8);
        yap(boyut);

}
void yap(int n)
{
    for(int i=1;i<(n+1);i++)
    {
        for(int j=1;j<(n+1);i++)
        {
            if(j<=(n-i))
            {
                printf(" ");
            }
            else
            {
                printf("#");
            }
        }
        printf("\n");
    }
}










